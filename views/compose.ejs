<%- include('partials/header'); -%>


<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="mb-3">
        <label for="compose" class="form-label">Title</label>
        <input class="form-control" type="text" name="postTitle" autocomplete="off">
    </div>
    <div class="mb-3">
        <label for="textAreaControl" class="form-label">Post</label>
        <textarea class="form-control" id="textAreaControl" name="postBody"cols="10" rows="5"></textarea>
    </div>

    <button class="btn btn-primary btn-custom" type="submit" name="button">Publish</button>
</form>


<%- include('partials/footer'); -%>